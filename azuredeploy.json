{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "studentNumber": {
            "type": "string",
            "metadata": {
              "description": "Student Number for unique DNS name."
            }
        },
        "adminUserName": {
            "type": "string",
            "defaultValue": "instructor",
            "metadata": {
              "description": "Admin User name for all the VM's."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
              "description": "Admin password for the virtual machines"
            }
        }
    },
    "variables": {
              
        "Images": {
            "CentOS_8": {
              "publisher": "OpenLogic",
              "offer": "CentOS-HPC",
              "sku": "8_1-gen2",
              "version": "latest"  
            },  
            "Rocky_8": {
              "publisher": "erockyenterprisesoftwarefoundationinc1653071250513",
              "offer": "rockylinux",
              "sku": "free",
              "version": "latest"
            },
            "Almalinux_8.5": {
              "publisher": "almalinux",
              "offer": "almalinux-hpc",
              "sku": "8_5-hpc",
              "version": "latest"
            }
        },
        "NodeimageReference": "[variables('Images')['Rocky_8']]",
        "Plans": {
            "CentOS_8": {
               "name": "8_1-gen2",
               "product": "CentOS-HPC",
               "publisher": "OpenLogic"   
            },
            "Rocky_8": {
               "name": "free",
               "product": "rockylinux",
               "publisher": "erockyenterprisesoftwarefoundationinc1653071250513"
            },
            "Almalinux_8.5": {
              "name": "8_5-hpc-gen2",
               "product": "almalinux-hpc",
               "publisher": "almalinux"
            }
        },
        "NodePlanReference": "[variables('Plans')['Rocky_8']]",            
        "vmScripts": {
          "scriptsToDownload": [
            "https://raw.githubusercontent.com/grandparoach/sandbox/LCI/startup.sh"
            ],
            "commandToExecute": "[concat('bash startup.sh ', parameters('adminUserName'), ' ', parameters('adminPassword'))]"
          }
        },
          
    "resources": [
        
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-12-01",
            "name": "head-IP",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[concat('student', parameters('studentnumber'))]"
                },
                "ipTags": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-12-01",
            "name": "LCIVNet",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "192.168.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "private",
                        "properties": {
                            "addressPrefix": "192.168.0.0/24",
                            "delegations": []
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-12-01",
            "name": "[concat('LCIVNet', '/private')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'LCIVNet')]"
            ],
            "properties": {
                "addressPrefix": "192.168.0.0/24",
                "delegations": []
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "name": "[concat('compute', copyindex(1))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat('compute', copyindex(1), '-nic'))]"
                ],
            "copy": {
                "name": "ComputeVmCopy",
                "count": 2
              },
            "plan": "[variables('NodePlanReference')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_F2s"
                },
                "storageProfile": {
                    "imageReference": "[variables('NodeimageReference')]",
                    "osDisk": {
                        "osType": "Linux",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                            },
                        "diskSizeGB": 30
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat('compute', copyindex(1))]",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false,
                        "provisionVMAgent": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('compute', copyindex(1), '-nic'))]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat('compute', copyindex(1), '/ext')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', 'head')]",  
              "[concat('Microsoft.Compute/virtualMachines/', 'compute1')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'compute2')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage1')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage2')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage3')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage4')]"
            ],
            "copy": {
                "name": "ComputeExtCopy",
                "count": 2
              },
            "properties": {
              "publisher": "Microsoft.Azure.Extensions",
              "type": "CustomScript",
              "typeHandlerVersion": "2.0",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": "[variables('vmScripts').scriptsToDownload]",
                "timestamp": 12
              },
              "protectedSettings": {
                "commandToExecute": "[variables('vmScripts').commandToExecute]"
              }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "name": "head",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'head-nic')]"
            ],
            "plan": "[variables('NodePlanReference')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_F2s"
                },
                "storageProfile": {
                    "imageReference": "[variables('NodeimageReference')]",
                    "osDisk": {
                        "osType": "Linux",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                            },
                        "diskSizeGB": 30
                    },
                    "dataDisks": [
                       {
                            "lun": 0,
                            "name": "[concat('head_DataDisk_0')]",
                            "createOption": "Empty",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                               },
                            "diskSizeGB": 5
                        },
                        {
                            "lun": 1,
                            "name": "[concat('head_DataDisk_1')]",
                            "createOption": "Empty",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                               },
                            "diskSizeGB": 5
                        },
                        {
                            "lun": 2,
                            "name": "[concat('head_DataDisk_2')]",
                            "createOption": "Empty",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                               },
                            "diskSizeGB": 5
                        },
                        {
                            "lun": 3,
                            "name": "[concat('head_DataDisk_3')]",
                            "createOption": "Empty",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                               },
                            "diskSizeGB": 5
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "head",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false,
                        "provisionVMAgent": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'head-nic')]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat('head/ext')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', 'head')]",  
                "[concat('Microsoft.Compute/virtualMachines/', 'compute1')]",
                "[concat('Microsoft.Compute/virtualMachines/', 'compute2')]",
                "[concat('Microsoft.Compute/virtualMachines/', 'storage1')]",
                "[concat('Microsoft.Compute/virtualMachines/', 'storage2')]",
                "[concat('Microsoft.Compute/virtualMachines/', 'storage3')]",
                "[concat('Microsoft.Compute/virtualMachines/', 'storage4')]"
            ],
            "properties": {
              "publisher": "Microsoft.Azure.Extensions",
              "type": "CustomScript",
              "typeHandlerVersion": "2.0",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": "[variables('vmScripts').scriptsToDownload]",
                "timestamp": 12
              },
              "protectedSettings": {
                "commandToExecute": "[variables('vmScripts').commandToExecute]"
              }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "name": "[concat('storage', copyindex(1))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat('storage', copyindex(1), '-nic'))]"
                ],
            "copy": {
                "name": "StorageVmCopy",
                "count": 4
              },
            "plan": "[variables('NodePlanReference')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_F2s"
                },
                "storageProfile": {
                    "imageReference": "[variables('NodeimageReference')]",
                    "osDisk": {
                        "osType": "Linux",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                            },
                        "diskSizeGB": 30
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "name": "[concat('storage', copyindex(1), '_DataDisk_0')]",
                            "createOption": "Empty",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                               },
                            "diskSizeGB": 5
                        },
                        {
                            "lun": 1,
                            "name": "[concat('storage', copyindex(1), '_DataDisk_1')]",
                            "createOption": "Empty",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS"
                               },
                            "diskSizeGB": 5
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat('storage', copyindex(1))]",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false,
                        "provisionVMAgent": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('storage', copyindex(1), '-nic'))]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat('storage', copyindex(1), '/ext')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', 'head')]",  
              "[concat('Microsoft.Compute/virtualMachines/', 'compute1')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'compute2')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage1')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage2')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage3')]",
              "[concat('Microsoft.Compute/virtualMachines/', 'storage4')]"
            ],
            "copy": {
                "name": "StorageExtCopy",
                "count": 4
              },
            "properties": {
              "publisher": "Microsoft.Azure.Extensions",
              "type": "CustomScript",
              "typeHandlerVersion": "2.0",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": "[variables('vmScripts').scriptsToDownload]",
                "timestamp": 12
              },
              "protectedSettings": {
                "commandToExecute": "[variables('vmScripts').commandToExecute]"
              }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "compute1-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "192.168.0.5",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "compute2-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "192.168.0.6",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "storage1-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "192.168.0.7",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "storage2-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "192.168.0.8",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "storage3-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "192.168.0.9",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "storage4-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "192.168.0.10",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-12-01",
            "name": "head-nic",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'head-IP')]",
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAddress": "192.168.0.4",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'head-IP')]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'LCIVNet', 'private')]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": [],
                    "appliedDnsServers": []
                },
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            }
        }
    ],
    "outputs": {
    "LoginString": {
      "value": "[concat('ssh instructor@student', parameters('studentnumber'), '.', 'resourceGroup().location', '.cloudapp.azure.com')]",
      "type": "string"
    }
  }
}
